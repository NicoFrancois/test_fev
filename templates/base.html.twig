    <script>

        $.fn.dataTable.ext.search.push(
            function( settings, data, dataIndex ) {
                var ageSearch = $('#byAge option:selected').val();
                var ageTable = data[4];

                return $.trim(ageTable).includes($.trim(ageSearch)) || ageSearch === 'All';

            }
        );

